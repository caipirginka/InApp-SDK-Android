<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"        
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin_half"
        android:paddingTop="@dimen/activity_vertical_margin_half"
        android:orientation="horizontal"
        android:weightSum="11"
        android:background="@drawable/pay_item_border">

        <ImageButton
            android:id="@+id/use_payment_instrument"
            style="@style/second_level_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin_half"
            android:layout_marginRight="@dimen/activity_vertical_margin_half"
            android:src="@drawable/ic_checkmark_holo_light" />

        <TextView
            android:id="@+id/pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="xxxxxxxxx1234"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/blocked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:textColor="@android:color/holo_red_dark" />

        <ImageButton
            android:id="@+id/remove_payment_instrument"
            style="@style/second_level_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin_half"
            android:layout_marginRight="@dimen/activity_vertical_margin_half"
            android:src="@drawable/ic_delete" />

    </LinearLayout>
